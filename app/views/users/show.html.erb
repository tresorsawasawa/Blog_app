<div class="users-bloc">
  <div class="user-bloc">
    <div class="user-image">
      <img src="<%= @user.photo %>" alt="user image">
    </div>
    <div class="user-data">
      <h4 class="user-name"><%= @user.name %></h4>
      <span class="user-posts">Number of posts: <%= @user.posts_counter || 0 %></span>
    </div>
  </div>
  <div class="user-bio">
    <h4>Bio</h4>
    <span class="user-bio-content"><%= @user.bio %></span>
  </div>
  <div class="user-bloc-posts">
    <% @user.recent_posts.each do |post| %>
    <div class="user-bloc-post">
      <h4><a href="<%= @user.id %>/posts/<%= post.id%>"><%= post.title %></a></h4>
      <span class="user-post-content"><%= post.text %></span>
      <span class="user-post-content-comments">Comment: <%= post.comments_counter || 0 %>, Likes : <%= post.likes_counter || 0 %></span>
    </div>
    <% end %>
  </div>
  <button class="see-posts clickable"><a href="<%= @user.id %>/posts">See all posts</a></button>
</div>
